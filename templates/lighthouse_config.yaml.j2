# Lighthouse Testnet Configuration

# The Ethereum 2.0 network to connect to (e.g. sepolia, goerli, mainnet, pyrmont, prater, medalla)
network: sepolia

# Data directory for storing Lighthouse database and other data
datadir: /root/.lighthouse/data/

# HTTP server configuration
http:
  enabled: true
  listen_address: 127.0.0.1
  listen_port: {{ lighthouse_rpc_port }}
  allow_origin: "*"

# JSON-RPC server configuration
rpc:
  enabled: true
  listen_address: 127.0.0.1
  listen_port: {{ lighthouse_rpc_port }}
  allow_origin: "*"

# REST API server configuration
rest_api:
  enabled: false
  listen_address: 127.0.0.1
  listen_port: 5062

# Beacon node configuration
beacon_node:
  http_address: 127.0.0.1
  http_port: {{ lighthouse_beacon_port }}
  execution-endpoint: http://{{ geth_node_name }}:8551
  execution-jwt: /root/.lighthouse/config/jwt.hex
  checkpoint-sync-url: https://sepolia.beaconstate.info

